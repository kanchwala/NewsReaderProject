<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.finalproject_newsreader"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="application.NewReaderApplication"
        >
        <activity
            android:name="project.finalproject_newsreader.SplashScreen"
            android:label="@string/app_name" 
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="project.finalproject_newsreader.HomeScreen"
            android:launchMode="singleTask">
            
        </activity>
        <activity android:name="project.finalproject_newsreader.SubCategoriesScreen"
           android:configChanges="orientation|screenSize"  >
            
        </activity>
        <activity android:name="project.finalproject_newsreader.ArticleList"
            android:configChanges="orientation|screenSize" >
            
        </activity>
        <activity android:name="project.finalproject_newsreader.ArticleScreen"
            >
            
        </activity>
        <activity android:name="project.finalproject_newsreader.SettingsScreen"
            >
            
        </activity>
        
        
        <activity android:name="project.finalproject_newsreader.WebViewScreen"
             android:configChanges="orientation|screenSize" 
            ></activity>
    </application>

</manifest>
